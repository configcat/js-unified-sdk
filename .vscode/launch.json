{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug build",
      "program": "${workspaceRoot}/node_modules/gulp/bin/gulp",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Debug import-map generator",
      "program": "${workspaceRoot}/deno.import-map.generator.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Karma test run (Chrome)",
      "address": "localhost",
      "port": 9333,
      "pathMapping": {
        "/": "${workspaceRoot}",
        "/base/": "${workspaceRoot}/"
      }
    },
    {
      // This configuration needs the `oven.bun-vscode` extension to be installed.
      "type": "bun",
      "name": "Run tests (Bun)",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtime": "bun",
      "runtimeArgs": ["--tsconfig-override ./tsconfig.mocha.bun.json"],
      "program": "./node_modules/mocha/bin/mocha.js",
      "args": [
        "test/bun/index.ts",
        "--fgrep",
        "",
        "--color",
        "--exit",
        "--timeout",
        "30000"
      ],
      "noDebug": false,
    },
    {
      "type": "node",
      "name": "Run tests (Deno)",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "-A",
        "test/deno/index.ts",
        "--fgrep",
        "",
        "--timeout",
        "30000"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run tests (Node.js)",
      "cwd": "${workspaceRoot}",
      "env": {
        "TS_NODE_PROJECT": "./tsconfig.mocha.node.json"
      },
      "runtimeArgs": [
        "--expose-gc"
      ],
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "test/node/index.ts",
        "--fgrep",
        "",
        "--color",
        "--exit",
        "--timeout",
        "30000"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!${workspaceFolder}/**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}